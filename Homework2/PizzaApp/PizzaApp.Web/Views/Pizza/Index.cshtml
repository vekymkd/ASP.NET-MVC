@model List<PizzaApp.Web.Models.ViewModels.PizzaDetailsViewModel>

<h2 class="text-center">Pizza list</h2>
<div class="row">
    <div class="col-md-4">
        @foreach (var item in Model)
        {
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">Pizza size: @item.PizzaSize</p>
                    <p class="card-text">Pizza price: @item.Price</p>
                    <a href="" class="btn btn-primary">Details</a>
                </div>
            </div>
        }
    </div>
</div>
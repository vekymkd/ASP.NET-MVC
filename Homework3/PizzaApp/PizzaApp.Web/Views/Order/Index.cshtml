@model List<PizzaApp.Web.Models.ViewModels.OrderDetailsViewModel>

<h2 class="text-center">Order list</h2>
<div class="row">
    <div class="col-md-5">
        @foreach (var item in Model)
        {
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Pizza: @item.PizzaName</h5>
                    <p class="card-text">Customer name: @item.UserFullname</p>
                    <p class="card-text">Pizza price: @item.Price</p>
                    <p class="card-text">Payment: @item.PaymentMethod</p>
                </div>
            </div>
        }
    </div>
</div>

@model List<OrderDetailsViewModel>
<h2>Orders</h2>

<a asp-action="CreateOrder" asp-controller="Order" class="btn btn-dark mb-3 mt-3">Create new order</a>

<div class="row">
    <div class="col-md-5">
        @for (int i = 0; i < Model.Count; i++)
        {
            <partial name="~/Views/Shared/Partial/_OrderDetails.cshtml" for="@Model[i]" />
            @Html.ActionLink("Details", "Details", "Order", new { id = Model[i].Id })
            <a asp-action="DeleteOrder" asp-controller="Order" asp-route-id="@Model[i].Id">Delete</a>
            <a asp-action="EditOrder" asp-controller="Order" asp-route-id="@Model[i].Id">Edit</a>
        }
    </div>
</div>
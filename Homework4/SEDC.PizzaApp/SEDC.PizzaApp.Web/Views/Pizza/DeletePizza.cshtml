@model PizzaDetailsViewModel

<h2>Are you sure you want to delete this pizza?</h2>

<partial name="~/Views/Shared/Partial/_PizzaDetails.cshtml" for="@Model" />

<div class="row">
    <div class="col-md-2"><a asp-action="DeletePizzaPost" asp-controller="Pizza" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a></div>
    <div class="col-md-2"><a asp-action="Index" asp-controller="Pizza" class="btn btn-success">Cancel</a></div>
</div>
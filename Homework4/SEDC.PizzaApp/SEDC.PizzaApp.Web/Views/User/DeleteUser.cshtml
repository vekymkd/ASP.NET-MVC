@model UserDetailsViewModel

<h3 class="text-center">Are you sure you want to delete this user?</h3>

<div class="row">
    <div class="col-md-12 border border-dark text-center">@Model.Id. @Model.FullName </div>
</div>

<div class="row mt-3">
    <div class="col-md-6 text-center"><a asp-action="Index" asp-controller="User" class="btn btn-outline-dark">Back</a></div>
    <div class="col-md-6 text-center"><a asp-action="DeleteUserPost" asp-controller="User" asp-route-id="@Model.Id" class="btn btn-outline-danger">Delete</a></div>
</div>